doctype
html(lang='en')
    head 
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='preconnect' href='https://fonts.googleapis.com')
        link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin)    
        link(href='https://fonts.googleapis.com/css2?family=Rochester&display=swap' rel='stylesheet')
        link(href='/styles.css' rel='stylesheet')
        title DeghedEaT
    body
        a.title(href='/') DeghedeEaaT
        block content
            each blog in blogs
                .content-container
                    .post-container
                        .secondary-content
                            .post-minutes=`${blog.minutes === 0 ? 1 : blog.minutes} min read`
                            .post-date= `${blog.date.getDate()}/${blog.date.getMonth() + 1}/${blog.date.getFullYear()}`
                        .primary-content
                            a.post-title(href=`view/${blog._id}`)= blog.title
                            .post-description= blog.description
        
